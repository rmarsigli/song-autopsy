---
import BaseLayout from '../layouts/base-layout.astro'

const suggestions = [
  { title: 'Home', href: '/', description: 'Browse all reviews' },
  { title: 'How Score Works', href: '/how-score-works', description: 'Understanding our scoring methodology' },
  { title: 'Latest Reviews', href: '/#latest-reviews', description: 'Check out our newest analyses' },
]
---

<BaseLayout title="404: Page Not Found">
  <div class="min-h-[80vh] flex items-center justify-center px-4">
    <div class="max-w-2xl mx-auto text-center">
      
      <!-- 404 Visual -->
      <div class="mb-8">
        <div class="text-8xl font-black text-zinc-800 mb-4">
          404
        </div>
        <h1 class="text-4xl font-bold text-white mb-4">
          Page Not Found
        </h1>
        <p class="text-lg text-zinc-400 leading-relaxed">
          This page doesn't exist in our collection. Unlike song lyrics, this URL has no deeper meaning to analyze.
        </p>
      </div>

      <!-- Suggestions -->
      <div class="mt-12">
        <h2 class="text-sm font-semibold uppercase tracking-wider text-zinc-500 mb-6">
          Where would you like to go?
        </h2>
        <div class="grid gap-4 max-w-xl mx-auto">
          {suggestions.map(item => (
            <a 
              href={item.href}
              class="block bg-zinc-900 border border-zinc-800 rounded-lg p-6 text-left hover:border-zinc-700 hover:bg-zinc-800/50 transition-all group"
            >
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-white group-hover:text-zinc-100 mb-1">
                    {item.title}
                  </h3>
                  <p class="text-sm text-zinc-400">
                    {item.description}
                  </p>
                </div>
                <svg 
                  class="w-5 h-5 text-zinc-600 group-hover:text-zinc-400 group-hover:translate-x-1 transition-all shrink-0 mt-1" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Back Button -->
      <div class="mt-12">
        <button 
          onclick="history.back()" 
          class="inline-flex items-center gap-2 text-sm text-zinc-400 hover:text-zinc-200 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Go back
        </button>
      </div>

    </div>
  </div>
</BaseLayout>
