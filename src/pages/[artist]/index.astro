---
import { getCollection, getEntry, type CollectionEntry } from 'astro:content'
import BaseLayout from '../../layouts/base-layout.astro'
import Breadcrumb from '../../components/breadcrumb.astro'
import ReviewListItem from '../../components/review-list-item.astro'

export async function getStaticPaths() {
  const reviews = await getCollection('reviews')
  
  // Agrupar por artista
  const byArtist = reviews.reduce((acc, review) => {
    const [artistSlug] = review.id.split('/')
    if (!acc[artistSlug]) acc[artistSlug] = []
    acc[artistSlug].push(review)
    return acc
  }, {} as Record<string, CollectionEntry<'reviews'>[]>)
  
  return Object.entries(byArtist).map(([artist, artistReviews]) => ({
    params: { artist },
    props: { artistReviews },
  }))
}

type Props = {
  artistReviews: CollectionEntry<'reviews'>[]
}

const { artistReviews } = Astro.props as Props
const firstReview = artistReviews[0]
const artist = await getEntry('artists', firstReview.data.artist_id)

if (!artist) {
  throw new Error(`Artist not found: ${firstReview.data.artist_id}`)
}

// Ordenar por score (maior primeiro)
const sortedReviews = [...artistReviews].sort((a, b) => b.data.final_score - a.data.final_score)

// Calcular estatísticas
const totalReviews = artistReviews.length
const avgScore = (artistReviews.reduce((sum, r) => sum + r.data.final_score, 0) / totalReviews).toFixed(1)

// Buscar albums para mostrar títulos
const albums = await getCollection('albums')
const albumMap = Object.fromEntries(
  albums.map(album => [album.id, album.data.title])
)
const albumsMap = new Map(albums.map(a => [a.id, a.data]))

// Group reviews by album and calculate stats for grid
const albumStats = artistReviews.reduce((acc, review) => {
  const albumId = review.data.album_id
  if (!albumId) return acc
  
  if (!acc[albumId]) {
    acc[albumId] = {
      albumId,
      reviews: [],
      totalScore: 0,
    }
  }
  
  acc[albumId].reviews.push(review)
  acc[albumId].totalScore += review.data.final_score
  
  return acc
}, {} as Record<string, { albumId: string, reviews: CollectionEntry<'reviews'>[], totalScore: number }>)

// Convert to array and add album data, sorted by year descending
const albumList = Object.values(albumStats)
  .map(stat => ({
    ...stat,
    albumData: albumsMap.get(stat.albumId),
    avgScore: (stat.totalScore / stat.reviews.length).toFixed(1),
  }))
  .filter(item => item.albumData)
  .sort((a, b) => {
    const yearA = parseInt(a.albumData?.year || '0')
    const yearB = parseInt(b.albumData?.year || '0')
    if (yearB !== yearA) return yearB - yearA
    return (a.albumData?.title || '').localeCompare(b.albumData?.title || '')
  })

const recentAlbums = albumList.slice(0, 3)
const hasMoreAlbums = albumList.length > 3

// Count unique albums for this artist
const uniqueAlbums = albumList.length
---

<BaseLayout title={`${artist.data.name} - Lyrics Sommelier`}>
  <div class="mx-auto max-w-6xl px-4 py-12">
    <Breadcrumb items={[
      { label: 'Home', href: '/' },
      { label: artist.data.name }
    ]} />

    <!-- Artist Header -->
    <div class="mb-12 border-b border-zinc-800 pb-8">
      <h1 class="mb-4 text-5xl font-bold tracking-tight text-white">
        {artist.data.name}
      </h1>
      <div class="flex flex-wrap gap-6 text-lg text-zinc-400">
        <div>
          <span class="text-zinc-500">Genre:</span>
          <span class="ml-2 text-zinc-300">{artist.data.genre.join(', ')}</span>
        </div>
        <div>
          <span class="text-zinc-500">Language:</span>
          <span class="ml-2 text-zinc-300">{artist.data.language}</span>
        </div>
        {artist.data.country && (
          <div>
            <span class="text-zinc-500">Country:</span>
            <span class="ml-2 text-zinc-300">{artist.data.country}</span>
          </div>
        )}
      </div>
      <div class="mt-4 flex gap-6 text-sm text-zinc-400">
        <div>
          <span class="text-2xl font-bold text-white">{totalReviews}</span>
          <span class="ml-2">reviews</span>
        </div>
        <div>
          <span class="text-2xl font-bold text-white">{avgScore}</span>
          <span class="ml-2">avg score</span>
        </div>
      </div>
    </div>

    <!-- Song Reviews -->
    <div class="space-y-2 mb-16">
      <h2 class="mb-6 text-2xl font-bold text-white">Song Reviews</h2>
      
      {sortedReviews.map((review) => {
        const [artistSlug, songSlug] = review.id.split('/')
        const albumTitle = review.data.album_id ? albumMap[review.data.album_id] || review.data.album_id : 'Unknown'
        const albumHref = review.data.album_id ? `/${artistSlug}/${review.data.album_id}` : undefined
        
        return (
          <ReviewListItem
            song={review.data.song}
            album={albumTitle}
            albumHref={albumHref}
            score={review.data.final_score}
            href={`/${artistSlug}/${songSlug}`}
          />
        )
      })}
    </div>

    <!-- Albums Section -->
    {recentAlbums.length > 0 && (
      <div class="border-t border-zinc-800 pt-12">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-white">
            {hasMoreAlbums ? 'Recent Albums' : 'Albums'}
          </h2>
          {hasMoreAlbums && (
            <a 
              href={`/${firstReview.data.artist_id}/albums`}
              class="text-blue-400 hover:text-blue-300 transition-colors text-sm font-medium"
            >
              View all {uniqueAlbums} albums →
            </a>
          )}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {recentAlbums.map((item) => {
            const album = item.albumData!
            const scoreColor = parseFloat(item.avgScore) >= 8 ? 'text-green-500' : 
                              parseFloat(item.avgScore) >= 6 ? 'text-yellow-500' : 'text-red-500'
            
            return (
              <a 
                href={`/${firstReview.data.artist_id}/${item.albumId}`}
                class="group block bg-zinc-900 border border-zinc-800 rounded-lg p-6 hover:border-zinc-700 transition-colors"
              >
                <div class="mb-4">
                  <h3 class="text-xl font-bold text-white group-hover:text-zinc-200 transition-colors mb-2">
                    {album.title}
                  </h3>
                  {album.year && (
                    <p class="text-sm text-zinc-500">{album.year}</p>
                  )}
                </div>
                
                {album.genre && album.genre.length > 0 && (
                  <div class="mb-4">
                    <div class="flex flex-wrap gap-2">
                      {album.genre.slice(0, 2).map(g => (
                        <span class="text-xs px-2 py-1 rounded bg-zinc-800 text-zinc-400">
                          {g}
                        </span>
                      ))}
                    </div>
                  </div>
                )}
                
                <div class="flex items-center justify-between pt-4 border-t border-zinc-800">
                  <div class="text-sm text-zinc-400">
                    <span class="font-semibold text-zinc-300">{item.reviews.length}</span> {item.reviews.length === 1 ? 'track' : 'tracks'}
                  </div>
                  <div class={`text-2xl font-bold ${scoreColor}`}>
                    {item.avgScore}
                  </div>
                </div>
              </a>
            )
          })}
        </div>
      </div>
    )}

  </div>
</BaseLayout>