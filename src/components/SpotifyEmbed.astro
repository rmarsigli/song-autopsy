---
interface Props {
  type: 'album' | 'track' | 'artist'
  id: string
}

const { type, id } = Astro.props
---

<iframe style="border-radius:12px" src={`https://open.spotify.com/embed/${type}/${id}?utm_source=generator`} width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
