---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/artists', label: 'Artists' },
  { href: '/how-score-works', label: 'How It Works' },
];

function isActive(href: string, current: string): boolean {
  if (href === '/') return current === '/';
  return current.startsWith(href);
}
---

<header class="border-b border-blue-900/30 bg-zinc-950">
  <div class="mx-auto max-w-7xl px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <a href="/" class="flex items-center gap-2 sm:gap-3 group">
        <img src="/favicon.svg" alt="Song Autopsy" class="w-7 h-7 sm:w-8 sm:h-8" />
        <div>
          <div class="font-bold text-white group-hover:text-blue-400 transition-colors text-sm sm:text-base">
            Song Autopsy
          </div>
          <div class="hidden sm:block text-[10px] uppercase tracking-wider text-blue-500/70 font-semibold">
            Lyrical Post-Mortem
          </div>
        </div>
      </a>

      <!-- Navigation -->
      <nav class="flex items-center gap-0.5 sm:gap-1">
        {navLinks.map(link => (
          <a
            href={link.href}
            class={`px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium rounded transition-all ${
              isActive(link.href, currentPath)
                ? 'text-white bg-blue-900/30 border border-blue-800/50'
                : 'text-zinc-400 hover:text-white hover:bg-zinc-800/50'
            }`}
          >
            {link.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>
