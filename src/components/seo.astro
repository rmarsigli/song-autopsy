---
import { getSiteUrl } from '../utils/review-helpers';

export interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  schema?: object;
  canonical?: string;
}

const {
  title,
  description,
  image = '/banner.png',
  type = 'website',
  schema,
  canonical,
} = Astro.props;

const siteUrl = getSiteUrl();
const currentUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;
const imageUrl = new URL(image, siteUrl).href;

// Base schema for organization
const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'Song Autopsy',
  description: 'AI-powered lyrical post-mortem analysis',
  url: siteUrl,
  logo: new URL('/favicon.svg', siteUrl).href,
};

// Website schema
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Song Autopsy',
  description: 'AI-powered lyrical post-mortem. Surgical analysis of song lyrics with clinical precision.',
  url: siteUrl,
};
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<link rel="canonical" href={currentUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={currentUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl} />
<meta property="og:site_name" content="Song Autopsy" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={currentUrl} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageUrl} />

<!-- Schema.org JSON-LD -->
<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
{schema && <script type="application/ld+json" set:html={JSON.stringify(schema)} />}
